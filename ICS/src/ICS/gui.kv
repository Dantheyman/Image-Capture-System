FloatLayout:
    MDRaisedButton:
        text: "Start Capture"
        size_hint: 0.20, 0.10
        pos_hint: {"center_x": .15, "center_y": .60}
        on_press: app.start_capture(*args)

    MDRaisedButton:
        text: "Stop Capture"
        size_hint: 0.20, 0.10
        pos_hint: {"center_x": .15, "center_y": .45}
        on_press: app.stop_capture(*args)

    MDRaisedButton:
        text: "Store Photos"
        size_hint: 0.20, 0.10
        pos_hint: {"center_x": .15, "center_y": .30}
        on_press: app.store_photos(*args)

    MDRaisedButton:
        text: "Close App"
        size_hint: 0.20, 0.10
        pos_hint: {"center_x": .15, "center_y": .15}
        on_press: app.stop(self)
